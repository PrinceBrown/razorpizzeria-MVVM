@page
@model RazorPizzeria.Pages.PizzaModel
@{
}




<div>
    <div class="text-center">
        <div class=" text-capitalize text-black">
            <h1 class="display-4">Our great selection of pizzas</h1>
            <h4>Choose one, or try our Pizza Builder! Then Order and Done!</h4>
            <h4>No need to provide your details</h4>
            <h4>We already know everything!</h4>

        </div>

        <p class="text-sm text-end text-secondary">
            <i>Only one pizza per order</i>
        </p>

    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 my-5">

                <div class="w-100 row bg-secondary m-0 align-items-center rounded">

                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" asp-append-version="true"  class="w-100" />

                    </div>

                    <div class="col-8  my-5">
                       <div class="align-middle text-white ">
                           <h3 class="text-start">Create Your Own Pizza</h3>
                           <p class="text-start my-3">Make your own pizza with our PizzaMaker!</p>
                           <a class="btn btn-primary" asp-area="" asp-page="/Forms/CustomPizza">Try Now!</a>
                       </div>

                    </div>

                </div>

            </div>

        </div>


        <div class="row">
           
                @foreach (var pizza in Model.fakePizzaDB)
                  {
                   var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");

                    <div class="col-md-4 mb-5">
                        <img src="@imagePath" asp-append-version="true" class="w-100" />
                        <a class="btn btn-primary mt-3" asp-area="" asp-page="Checkout/Checkout" asp-route-PizzaPrice="@pizza.Price" asp-route-ImageTitle="@pizza.ImageTitle">Get This Pizza</a>
                        <br />
                    </div>
                }
            
        </div>
    </div>


 
</div>